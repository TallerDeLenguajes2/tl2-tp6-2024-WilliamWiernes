@{
    ViewData["Title"] = "Lista de Presupuestos";
}

@model List<Presupuesto>

<table class="table table-responsive table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">idPresupuesto</th>
            <th scope="col">nombreDestinatario</th>
            <th scope="col">fechaCreación</th>
            <th scope="col" colspan="2">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var presupuesto in Model)
        {
            <tr>
                <td>@presupuesto.IdPresupuesto</td>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@presupuesto.FechaCreacion</td>
                <td>
                    <a asp-action="Modificar" asp-route-idPresupuesto="@presupuesto.IdPresupuesto">
                        <button type="button" class="btn btn-sm m-0 p-0">
                            <i class="far fa-pen text-info efecto-hover"></i>
                        </button>
                    </a>
                </td>
                <td>
                    <a asp-action="Eliminar" asp-route-idPresupuesto="@presupuesto.IdPresupuesto">
                        <button type="button" class="btn btn-sm m-0 p-0">
                            <i class="far fa-trash text-danger efecto-hover"></i>
                        </button>
                    </a>
                </td>
            </tr>

            <tr>
                <td colspan="5">
                    <table class="table table-dark table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">idProducto</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in presupuesto.ListaDetalles)
                            {
                                <tr>
                                    <td>@detalle.Producto.IdProducto</td>
                                    <td>@detalle.Producto.Descripcion</td>
                                    <td>$@detalle.Producto.Precio</td>
                                    <td>@detalle.Cantidad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mb-3">
    <a asp-action="Crear">
        <button type="button" class="btn btn-dark efecto-hover">
            Crear Presupuesto&nbsp;&nbsp;<i class="far fa-plus text-success efecto-hover"></i>
        </button>
    </a>
</div>
