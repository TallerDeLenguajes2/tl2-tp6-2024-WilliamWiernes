@{
    ViewData["Title"] = "Agregar Producto";
}

@model int

<div class="mb-3 d-flex justify-content-center">
    <form asp-controller="Presupuesto" asp-action="ModificarAgregarProducto" autocomplete="off"
        class="card bg-dark border-secondary p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center text-light">Agregar Producto</h2>
        <div class="mb-3">
            <label for="idPresupuesto" class="form-label text-muted">idPresupuesto</label>
            <input type="number" class="form-control bg-dark text-light border-secondary text-muted" id="idPresupuesto"
                name="idPresupuesto" readonly required min="0" step="1" value="@Model" />
        </div>
        <div class="mb-3">
            <label for="idProducto" class="form-label text-light">idProducto</label>
            <input type="number" class="form-control bg-dark text-light border-secondary" id="idProducto"
                name="idProducto" required min="1" step="1" />
        </div>
        <div class="mb-3">
            <label for="cantidad" class="form-label text-light">Cantidad</label>
            <input type="number" class="form-control bg-dark text-light border-secondary" id="cantidad" name="cantidad"
                required min="1" step="1" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success w-50 efecto-hover">
                <i class="far fa-plus"></i>
            </button>
        </div>
    </form>
</div>
