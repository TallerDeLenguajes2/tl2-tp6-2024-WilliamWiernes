@{
    ViewData["Title"] = "Lista de Productos";
}

@model List<Producto>

<table class="table table-responsive table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">idProducto</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col" colspan="2">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>$@producto.Precio</td>
                <td>
                    <a asp-action="Modificar" asp-route-idProducto="@producto.IdProducto">
                        <button type="button" class="btn btn-sm m-0 p-0">
                            <i class="far fa-pen text-info efecto-hover"></i>
                        </button>
                    </a>
                </td>
                <td>
                    <a asp-action="Eliminar" asp-route-idProducto="@producto.IdProducto">
                        <button type="button" class="btn btn-sm m-0 p-0">
                            <i class="far fa-trash text-danger efecto-hover"></i>
                        </button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mb-3">
    <a asp-action="Crear">
        <button type="button" class="btn btn-dark efecto-hover">
            Crear Producto&nbsp;&nbsp;<i class="far fa-plus text-success"></i>
        </button>
    </a>
</div>