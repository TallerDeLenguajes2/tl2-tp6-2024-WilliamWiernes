@{
    ViewData["Title"] = $"Modificar Producto";
}

@model Producto

<div class="mb-3 d-flex justify-content-center">
    <form asp-controller="Producto" asp-action="Modificar" autocomplete="off" class="card bg-dark border-secondary p-4"
        style="max-width: 500px; width: 100%;">
        <input type="hidden" asp-for="IdProducto">
        <h2 class="text-center text-light">Modificar Producto</h2>
        <div class="mb-3">
            <label for="descripcionProducto" class="form-label text-light">Descripci√≥n</label>
            <input type="text" class="form-control bg-dark text-light border-secondary" id="descripcionProducto"
                asp-for="Descripcion" value="@Model.Descripcion" required>
        </div>
        <div class="mb-4">
            <label for="precioProducto" class="form-label text-light">Precio</label>
            <input type="number" class="form-control bg-dark text-light border-secondary" id="precioProducto"
                asp-for="Precio" value="@Model.Precio" min="0" step="1" required>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-info w-50 efecto-hover">
                <i class="far fa-pen"></i>
            </button>
        </div>
    </form>
</div>
